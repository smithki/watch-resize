{
  "name": "watch-resize",
  "version": "1.1.0",
  "description": "Watch any DOM element for size changes using Observables.",
  "author": "Ian K Smith <smithki707@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/smithki/watch-resize"
  },
  "files": [
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.cjs.d.ts",
  "unpkg": "dist/index.umd.js",
  "scripts": {
    "dev": "npm-run-all -s clean:dist -p compile_watch:*",
    "build": "npm-run-all -s clean:dist -p compile:*",
    "compile:cjs": "microbundle build src/index.cjs.ts --format cjs",
    "compile:umd": "microbundle build src/index.umd.ts --format umd --name watchResize",
    "compile_watch:cjs": "microbundle watch src/index.cjs.ts --format cjs",
    "compile_watch:umd": "microbundle watch src/index.umd.ts --format umd --name watchResize",
    "clean": "npm-run-all -s clean:*",
    "clean:dist": "rimraf dist",
    "clean:cache": "rimraf .rts2_cache_*",
    "release_patch": "npm run build && npm version patch && npm publish",
    "release_minor": "npm run build && npm version minor && npm publish",
    "release_major": "npm run build && npm version major && npm publish"
  },
  "devDependencies": {
    "@ikscodes/tslint-config": "^5.3.1",
    "microbundle": "^0.8.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.14.0",
    "rimraf": "^2.6.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "rxjs": "^6.3.3"
  }
}
